<div class="md:p-8 p-4">
  <%- include("../../alert.ejs")%>
  <h1 class="md:text-5xl text-3xl text-gray-900 md:mb-10 mb-5">Tambah Item</h1>
  <div class="sm:w-3/4 lg:w-1/3 xl:w-1/2 w-full bg-white px-4 py-6 rounded-md shadow-md">
    <form action="/admin/item" method="post" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="block mb-3 text-sm font-medium text-gray-900">Title</label>
        <input type="text" id="title" name="title" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Masukkan nama kategori" required />
      </div>
      
      <div class="mb-3">
        <label for="price" class="block mb-3 text-sm font-medium text-gray-900">Price</label>
        <input type="text" id="price" name="price" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Masukkan nama kategori" required />
      </div>

      <div class="mb-3">
        <label for="city" class="block mb-3 text-sm font-medium text-gray-900">City</label>
        <input type="text" id="city" name="city" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Masukkan nama kategori" required />
      </div>

      <div class="mb-3">
        <label for="categoryId" class="block mb-2 text-sm font-medium text-gray-900">Category</label>
        <select id="categoryId" name="categoryId" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
          <option value="">--- Category ---</option>
          <% category.forEach(data => { %>           
            <option value="<%=data._id%>"><%= data.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-6">
        <label for="image" class="block mb-3 text-sm font-medium text-gray-900">Image</label>
        <input type="file" id="image" name="image" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"  multiple required/>
      </div>

      <div class="mb-6">
        <label for="description" class="block mb-3 text-sm font-medium text-gray-900">Description</label>
        <textarea name="description" id="editor" rows="5" ></textarea>
      </div>
      
      <div class="flex justify-end pt-2">
        <a href="/admin/bank" class="px-4 bg-transparent p-3 rounded-lg text-blue-500 hover:bg-gray-100 hover:text-blue-400 mr-2" type="button">
          Batal
        </a>
        <button class="px-4 bg-blue-700 p-3 rounded-lg text-white hover:bg-blue-600" type="submit">
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>
<script src="https://cdn.ckeditor.com/ckeditor5/32.0.0/classic/ckeditor.js"></script>
<script>
  ClassicEditor
      .create( document.querySelector( '#editor'))
      .then( editor => {
        editor.ui.view.editable.element.style.height = '200px';
      })
      .catch( error => {
      });
</script>