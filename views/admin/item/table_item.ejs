<div class="md:w-9/12 w-full">
  <div class="overflow-x-auto shadow-md sm:rounded-lg">
    <div class="inline-block min-w-full align-middle">
      <div class="overflow-hidden ">
        <table class="min-w-full divide-y divide-gray-200 table-fixed">
          <thead class="bg-gray-200 ">
            <tr>
              <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
              &#x2116;
              </th>
              <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
              Title
              </th>
              <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
              Price
              </th>
              <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
              Country
              </th>
              <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
              City
              </th>
              <th scope="col" class="py-3 px-6 text-xs font-medium tracking-wider text-left text-gray-700 uppercase">
                Action
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% let index = 1%>
            <% if (items.length == 0) { %>
             <tr>
              <td colspan="6" class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap text-center">
                Data kosong
              </td>
            </tr>
            <% } %>
            <% items.forEach(item => { %>
              <tr class="hover:bg-gray-100">
                <td class="py-4 px-6 text-sm font-medium text-gray-900 whitespace-nowrap">
                  <%= index++ %>
                </td>
                <td class="py-4 px-6 text-sm font-medium text-gray-500 whitespace-nowrap">
                  <%= item.title %>
                </td>
                <td class="py-4 px-6 text-sm font-medium text-gray-500 whitespace-nowrap">
                  $ <%= item.price %>
                </td>
                <td class="py-4 px-6 text-sm font-medium text-gray-500 whitespace-nowrap">
                  <%= item.country %>
                </td>
                <td class="py-4 px-6 text-sm font-medium text-gray-500 whitespace-nowrap">
                  <%= item.city %>
                </td>
                <td class="py-4 px-6 text-sm font-medium whitespace-nowrap">
                  <a href="/admin/item/show-image/<%= item._id %>" class="inline-block bg-green-500 hover:bg-green-600 py-1 px-2 w-8 h-8 rounded-full">
                    <i class="fa fa-picture-o text-white text-base" aria-hidden="true"></i>
                  </a>
                  <a href="/admin/item/edit-item/<%= item._id %>" class="inline-block bg-yellow-400 hover:bg-yellow-500 py-1 px-2 w-8 h-8 rounded-full">
                    <i class="fa fa-pencil-square-o text-white text-base" aria-hidden="true"></i>
                  </a>
                  <form action="/admin/item?_method=DELETE" method="post" class="inline">
                    <input type="hidden" name="_id" value="<%= item._id %>"/>
                    <button type="submit" class="inline-block bg-red-400 hover:bg-red-500 py-1 px-2 w-8 h-8 rounded-full" onclick="return confirm('Anda yakin ingin menghapus data ini?')">
                      <i class="fa fa-trash-o text-white text-base" aria-hidden="true"></i>
                    </button>
                  </form>
                  <a href="/admin/item/feature/<%= item._id %>" class="inline-block bg-sky-400 hover:bg-sky-500 py-1 px-2 w-8 h-8 rounded-full">
                    <i class="fa fa-plus text-white text-base" aria-hidden="true"></i>
                  </a> 
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>