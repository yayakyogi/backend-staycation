<div class="md:p-8 p-4">
  <div class="md:w-1/3 w-full bg-white px-4 pt-3 pb-6 rounded-md shadow-md">
    <h1 class="text-2xl mb-5 font-medium">Edit Activity</h1>
    <form action="/admin/item/activity/update?_method=PUT" method="post" enctype="multipart/form-data">
      <input type="hidden" name="_id" value="<%= activity._id%>"/>
      <input type="hidden" name="itemId" value="<%= activity.itemId%>"/>
      <div class="mb-3">
        <label for="name" class="block mb-3 text-sm font-base text-gray-900">Name</label>
        <input type="text" id="name" name="name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Masukkan nama kategori" value="<%= activity.name%>" required />
      </div>
      <div class="mb-3">
        <label for="type" class="block mb-3 text-sm font-base text-gray-900">Type</label>
        <input type="text" id="type" name="type" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" placeholder="Masukkan nama kategori" value="<%= activity.type%>" required />
      </div>
      <div class="mb-6">
        <label for="image" class="block mb-3 text-sm font-base text-gray-900">Image</label>
        <input type="file" id="image" name="image" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" />
      </div>
      <div class="flex justify-end">
        <a href="/admin/item/activity/<%= activity.itemId%>" class="px-4 bg-transparent p-3 rounded-lg text-blue-500 hover:bg-gray-100 hover:text-blue-400 mr-2" type="button">
          Batal
        </a>
        <button class="pt-2 px-4 bg-blue-700 p-3 rounded-lg text-white hover:bg-blue-600" type="submit">
          Simpan
        </button>
      </div>
    </form>
  </div>
</div>